{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "suppressExcessPropertyErrors": true,
        "removeComments": true,
        "outDir": "dist",
        "lib": [
            "es2015"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.js"
    ]
}